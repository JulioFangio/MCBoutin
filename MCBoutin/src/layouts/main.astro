---
import { Navbar1 } from '../components/Navbar.tsx';
import IntroScreen from '../components/IntroScreen';

const { title = "Mon site Astro" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo_mariechristineBOUTIN.png" />
    <title>MC Boutin | Thérapeute</title>
  </head>
<body
  class="m-0 p-0 relative bg-repeat bg-left-top"
  style="background-image: url('texture.jpeg'); background-size: 43% !important;"
>
    
    <!-- IntroScreen React fullscreen overlay -->
    <IntroScreen client:load />

    <!-- Navbar -->
    <header class="w-full relative z-49">
      <Navbar1 client:load />
    </header>

    <!-- Main content -->
    <main class="w-full relative z-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="w-full bg-gray-900 text-white text-center py-6 mt-12 relative z-10">
      © {new Date().getFullYear()} Mon site Astro. Tous droits réservés.
    </footer>

  </body>
</html>
