---
import { Navbar1 } from '../components/Navbar.tsx';
import IntroScreen from '../components/IntroScreen';

---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon - Logo Marie-Christine Boutin -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="PRW2h0dE9_15sCMw5yAOnRN96Y6wECxhXGcOoDksp30" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://mcboutin.fr/" />
    
    <!-- SEO Meta Tags -->
    <title>Marie-Christine Boutin - Thérapeute Familiale, Systémique et Coach | Nantes</title>
    <meta name="description" content="Marie-Christine Boutin, thérapeute familiale et coach à Nantes. Accompagnement individuel, couple, famille. Thérapie systémique, coaching orientation et reconversion professionnelle pour adultes, jeunes et étudiants." />
    <meta name="keywords" content="thérapeute, thérapie, coach, coaching, thérapie familiale, systémique, Nantes, couple, famille, reconversion, orientation, jeune, étudiant, parcours professionnel, orientation professionnelle, thérapie de couple, adolescent, adulte, transition, changement, Loire-Atlantique, 44, développement personnel, accompagnement personnalisé, burn-out, épuisement, stress, anxiété, crise, rupture" />
    <meta name="author" content="Marie-Christine Boutin" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mcboutin.fr/" />
    <meta property="og:title" content="Marie-Christine Boutin - Thérapeute Familiale et Coach | Nantes" />
    <meta property="og:description" content="Accompagnement thérapeutique individuel, couple et famille. Coaching orientation et reconversion à Nantes." />
    <meta property="og:image" content="https://mcboutin.fr/logo_mariechristineBOUTIN.png" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://mcboutin.fr/" />
    <meta property="twitter:title" content="Marie-Christine Boutin - Thérapeute Familiale et Coach | Nantes" />
    <meta property="twitter:description" content="Accompagnement thérapeutique individuel, couple et famille. Coaching orientation et reconversion à Nantes." />
    <meta property="twitter:image" content="https://mcboutin.fr/logo_mariechristineBOUTIN.png" />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "Marie-Christine Boutin",
      "description": "Thérapeute familiale, systémique et coach à Nantes",
      "url": "https://mcboutin.fr",
      "telephone": "+33699345541",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "134 Rue du Croissant",
        "addressLocality": "Nantes",
        "postalCode": "44300",
        "addressCountry": "FR"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "47.237856",
        "longitude": "-1.553424"
      },
      "serviceType": ["Thérapie familiale", "Thérapie systémique", "Coaching", "Thérapie de couple"],
      "areaServed": "Nantes",
      "logo": "https://mcboutin.fr/logo_mariechristineBOUTIN.png",
      "image": "https://mcboutin.fr/logo_mariechristineBOUTIN.png"
    }
    </script>
  </head>
<body
  class="m-0 p-0 relative bg-repeat bg-left-top"
  style="background-image: url('texture.jpeg'); background-size: 43% !important;"
>
    
    <!-- IntroScreen React fullscreen overlay -->
    <IntroScreen client:load />

    <!-- Navbar -->
    <header class="w-full relative z-49">
      <Navbar1 client:load />
    </header>

    <!-- Main content -->
    <main class="w-full relative z-10">
      <slot />
    </main>

  </body>
</html>
